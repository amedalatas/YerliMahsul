@model RatingViewModel

<h1>Yorum Yap</h1>

<form asp-action="AddRating" method="post">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <label asp-for="RatingValue" class="control-label"></label>
        <select asp-for="RatingValue" class="form-control">
            <option value="1">1 - Kötü</option>
            <option value="2">2 - Zayıf</option>
            <option value="3">3 - Orta</option>
            <option value="4">4 - İyi</option>
            <option value="5">5 - Mükemmel</option>
        </select>
        <span asp-validation-for="RatingValue" class="text-danger"></span>
        <span class="text-danger">@ViewData["CustomError"]</span>   
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.ProductID">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
