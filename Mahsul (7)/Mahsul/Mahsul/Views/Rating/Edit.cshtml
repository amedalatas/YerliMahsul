@model RatingViewModel

<h2>Yorumu Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="RatingValue"></label>
        <input asp-for="RatingValue" class="form-control" />
        <span asp-validation-for="RatingValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="RatingID" />
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a asp-action="Details" asp-controller="Product" asp-route-id="@Model.ProductID">Geri Dön</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
