@model List<Mahsul.Models.Purchase>

<h1 class="mb-4">Satın Alınan Ürünler</h1>

@if (Model.Count == 0)
{
    <p class="text-center">Henüz satın alınmış ürün bulunmamaktadır.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var purchase in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@purchase.Product.ProductName</h5>
                        <ul class="list-group list-group-flush flex-grow-1">
                            <li class="list-group-item">Satın Alınma Tarihi: @purchase.PurchaseDate.ToShortDateString()</li>
                            <li class="list-group-item">Miktar: @purchase.Quantity</li>
                            <li class="list-group-item">Fiyat: @purchase.Price</li>
                            <li class="list-group-item">Toplam Fiyat: @(purchase.Quantity * purchase.Price)</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .card {
        border-radius: 15px;
        border: none;
        transition: box-shadow 0.3s;
        background-color: #f8f9fa;
    }

        .card:hover {
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

    .list-group-item {
        border: none;
        padding: 10px 15px;
    }

        .list-group-item:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.03);
        }

    h1 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: #343a40;
    }

    .text-center {
        font-size: 1.2em;
        color: #6c757d;
    }
</style>
